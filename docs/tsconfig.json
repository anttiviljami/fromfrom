{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "jsx": "react",
    "jsxFactory": "h",
    "lib": ["es2015", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "strict": true,
    "sourceMap": true,
    "target": "es6",
    "typeRoots": ["node_modules/@types"],
    "types": []
  },
  "include": ["src"]
}
